#
# مثال: حاسبة بسيطة
# SEEKEP - Smart Expressive Efficient Knowledge Execution Platform
#

# دالة الجمع
dالة جمع(أ، ب) {
    أرجع أ + ب
}

# دالة الطرح
dالة طرح(أ، ب) {
    أرجع أ - ب
}

# دالة الضرب
dالة ضرب(أ، ب) {
    أرجع أ * ب
}

# دالة القسمة
dالة قسمة(أ، ب) {
    إذا (ب == 0) {
        اطبع("خطأ: القسمة على صفر!")
        أرجع فارغ
    }
    أرجع أ / ب
}

# دالة الآس
dالة أس(أساس، الأس) {
    أرجع أساس ^ الأس
}

# اختبار الحاسبة
اطبع("=== حاسبة SEEKEP ===")
اطبع("5 + 3 = " + نص(جمع(5، 3)))
اطبع("10 - 4 = " + نص(طرح(10، 4)))
اطبع("6 * 7 = " + نص(ضرب(6، 7)))
اطبع("20 / 4 = " + نص(قسمة(20، 4)))
اطبع("2 ^ 8 = " + نص(أس(2، 8)))

# استخدام دوال الرياضيات المدمجة
اطبع("\n=== دوال الرياضية ===")
اطبع("جذر(16) = " + نص(جذر(16)))
اطبع("جيب(0) = " + نص(جيب(0)))
اطبع("جيب_تام(0) = " + نص(جيب_تام(0)))
اطبع("قيمة_مطلقة(-5) = " + نص(قيمة_مطلقة(-5)))
