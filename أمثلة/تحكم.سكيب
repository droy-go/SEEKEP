#
# مثال: تدفق التحكم
# SEEKEP - Smart Expressive Efficient Knowledge Execution Platform
#

# === عبارة إذا ===
متغير العمر = 25

إذا (العمر < 13) {
    اطبع("طفل")
} وإلا إذا (العمر < 20) {
    اطبع("مراهق")
} وإلا إذا (العمر < 60) {
    اطبع("بالغ")
} وإلا {
    اطبع("كبير في السن")
}

# === عبارة أثناء ===
اطبع("\n=== حلقة أثناء ===")
متغير عداد = 1
أثناء (عداد <= 5) {
    اطبع("العدد: " + نص(عداد))
    عداد = عداد + 1
}

# === عبارة لكل ===
اطبع("\n=== حلقة لكل ===")
لكل (i في المدى(1، 6)) {
    اطبع("التكرار: " + نص(i))
}

# === لكل مع قائمة ===
اطبع("\n=== لكل مع قائمة ===")
متغير ألوان = ["أحمر"، "أخضر"، "أزرق"]
لكل (لون في ألوان) {
    اطبع("اللون: " + لون)
}

# === استخدام توقف واستمر ===
اطبع("\n=== توقف واستمر ===")
لكل (i في المدى(1، 11)) {
    إذا (i == 3) {
        استمر  # تخطي 3
    }
    إذا (i == 7) {
        توقف  # إيقاف عند 7
    }
    اطبع("العدد: " + نص(i))
}

# === العملية الثلاثية ===
متغير الدرجة = 75
متغير النتيجة = (الدرجة >= 60) ? "ناجح" : "راسب"
اطبع("\nالنتيجة: " + النتيجة)

# === مطابقة النمط (محاكاة) ===
متغير اليوم = "السبت"
متغير نوع_اليوم = فارغ

إذا (اليوم == "السبت" أو اليوم == "الأحد") {
    نوع_اليوم = "عطلة نهاية الأسبوع"
} وإلا إذا (اليوم == "الجمعة") {
    نوع_اليوم = "يوم الجمعة"
} وإلا {
    نوع_اليوم = "يوم عمل"
}

اطبع("\n" + اليوم + " هو " + نوع_اليوم)
