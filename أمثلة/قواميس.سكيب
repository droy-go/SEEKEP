#
# مثال: العمل مع القواميس
# SEEKEP - Smart Expressive Efficient Knowledge Execution Platform
#

# إنشاء قاموس
متغير شخص = {
    "الاسم": "أحمد",
    "العمر": 30,
    "المدينة": "القاهرة"
}

اطبع("الشخص: " + نص(شخص))

# الوصول للقيم
اطبع("الاسم: " + شخص["الاسم"])
اطبع("العمر: " + نص(شخص["العمر"]))

# تعديل قيمة
شخص["العمر"] = 31
اطبع("العمر المحدث: " + نص(شخص["العمر"]))

# إضافة مفتاح جديد
شخص["المهنة"] = "مبرمج"
اطبع("بعد الإضافة: " + نص(شخص))

# الحصول على المفاتيح والقيم
متغير المفاتيح = المفاتيح(شخص)
متغير القيم = القيم(شخص)

اطبع("\nالمفاتيح: " + نص(المفاتيح))
اطبع("القيم: " + نص(القيم))

# التكرار على القاموس
اطبع("\nمعلومات الشخص:")
لكل (مفتاح في المفاتيح) {
    اطبع(مفتاح + ": " + نص(شخص[مفتاح]))
}

# قاموس متداخل
متغير طلاب = {
    "محمد": {"العمر": 20، "التخصص": "هندسة"},
    "علي": {"العمر": 22، "التخصص": "طب"},
    "سارة": {"العمر": 21، "التخصص": "علوم حاسب"}
}

اطبع("\nالطلاب:")
لكل (اسم في المفاتيح(طلاب)) {
    متغير معلومات = طلاب[اسم]
    اطبع(اسم + " - " + معلومات["التخصص"])
}
